{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "${workspaceRoot}\\node_modules\\.bin\\tsc",
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "build", 
            "args": ["-p", "."],
            "isBuildCommand": true,
            "suppressTaskName": true,
            "problemMatcher": "$tsc"
        }
    ]
}